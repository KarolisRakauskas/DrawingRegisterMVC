@model DrawingRegisterWeb.Models.Drawing

@{
    ViewData["Title"] = "Drawing Edit";
}

<h1 class="text-primary">Edit</h1>

<h4>Drawing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <span class="text-danger">@Html.ValidationMessage("WhiteSpaces")</span>
            <span class="text-danger">@Html.ValidationMessage("NoEdit")</span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DrawingNumber" class="control-label"></label>
                <input asp-for="DrawingNumber" class="form-control" />
                <span asp-validation-for="DrawingNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>

            <input asp-for="ProjectId" value="@ViewBag.ProjectId" hidden>

            <div class="btn-group mt-3" role="group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Details</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
