@model IEnumerable<Project>

@{
	ViewData["Title"] = "Projects";
}

<h1>Projects</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ProjectNubmer)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreateDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DeadlineDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ProjectState)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@item.ProjectNubmer
			</td>
			<td>
				@item.Name
			</td>
			<td>
				@item.Description
			</td>
			<td>
				@item.CreateDate.ToShortDateString()
			</td>
			<td>
				@item.DeadlineDate.ToShortDateString()
			</td>
			<td>
					@if (item.ProjectState == null)
					{
						continue;
					}
				@item.ProjectState.Name
			</td>
			<td>
				<div class="btn-group" role="group">
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Delete</a>
				</div>
			</td>
		</tr>
}
	</tbody>
</table>
